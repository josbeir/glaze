pageTemplate: page
extensions:
	- sitemap
	- llms-txt
site:
	title: Glaze
	description: PHP templating engine documentation
	basePath: /glaze
	baseUrl: https://josbeir.github.io/
	repository: 'https://github.com/josbeir/glaze'
	footer: 'Created by Jasper Smet.'
	license: 'MIT License'
	licenseLink: 'https://github.com/josbeir/glaze/blob/main/LICENSE.md'
djot:
	codeHighlighting:
		enabled: true
		themes:
			dark: plastic
			light: light-plus
		withGutter: false
	headerAnchors:
		enabled: true
build:
	clean: false
	vite:
		enabled: true
devServer:
	vite:
		enabled: true
		port: 5174

