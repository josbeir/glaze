pageTemplate: page
site:
	title: Glaze - A PHP static site generator
	description: Glaze PHP templating engine documentation
	basePath: /glaze

contentTypes:
	blog:
		paths:
			- match: blog
			  createPattern: 'blog/{date:Y/m}'

codeHighlighting:
	enabled: true
	theme: plastic
	withGutter: false

